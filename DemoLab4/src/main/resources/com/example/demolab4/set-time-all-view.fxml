<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demolab4.SetTimeAllController">
   <children>
      <Label alignment="CENTER" contentDisplay="TOP" layoutX="52.0" layoutY="32.0" prefHeight="44.0" prefWidth="417.0" text="Set time on all clocks">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <CheckBox fx:id="SetHoursCheckBox" alignment="CENTER" layoutX="52.0" layoutY="164.0" mnemonicParsing="false" onMouseClicked="#onSetHoursCheckBoxClicked" prefHeight="75.0" prefWidth="130.0" text="Hours">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="SetMinutesCheckBox" alignment="CENTER" layoutX="52.0" layoutY="239.0" mnemonicParsing="false" onMouseClicked="#onSetMinutesCheckBoxClicked" prefHeight="75.0" prefWidth="130.0" text="Minutes">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="SetSecondsCheckBox" alignment="CENTER" layoutX="52.0" layoutY="314.0" mnemonicParsing="false" onMouseClicked="#onSetSecondsCheckBoxClicked" prefHeight="75.0" prefWidth="130.0" text="Seconds">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </CheckBox>
      <Button fx:id="SetTimeAllSubButton" alignment="CENTER" layoutX="250.0" layoutY="287.0" mnemonicParsing="false" onMouseClicked="#onSetTimeAllSubButtonClicked" prefHeight="55.0" prefWidth="166.0" style="-fx-background-color: lightgreen;" text="SET">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <TextField fx:id="TimeValueTextField" alignment="CENTER" layoutX="250.0" layoutY="212.0" onMouseClicked="#onTimeValueTextFieldClicked" prefHeight="55.0" prefWidth="166.0" style="-fx-border-color: black;" text="VALUE">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
